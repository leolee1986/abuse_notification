<% include ../../partials/header %>

<div class="containter">
    <div class="row">
        <div class="col-md-2 panel panel-default" >
            <div class="panel-heading  text-center"><h1>Detail Info</h1></div>
            <div class="panel-body">
                <form class="form-group">
                  <a href="/channels/<%=channel._id%>/edit" class="btn btn-info">Update Channel Info</a>
                </form>
                <form class="form-group" action="/channels/<%=channel._id%>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Delete Channel</button>
                </form>
            </div>
        </div>
        <div class="col-md-8">
            <div class="panel panel-primary">
              <div class="panel-heading">Channel Name</div>
                <div class="panel-body">
                    <strong><%=channel.channelName%></strong>
                </div>
            </div>
            <div class="panel panel-default">
              <div class="panel-heading">Channel Logo</div>
                <div class="panel-body">
                    <img src="<%=channel.logo%>">
                </div>
            </div>        
            <div class="panel panel-default">
              <div class="panel-heading">Channel Programmer</div>
                <div class="panel-body">
                    <%= channel.programmer%>
                </div>
            </div>  
            <div class="panel panel-default">
              <div class="panel-heading">Do We have POA</div>
                <div class="panel-body">
                    <%= channel.poa%>
                </div>
            </div>  
            <div class="panel panel-default">
              <div class="panel-heading">Language Group</div>
                <div class="panel-body">
                    <%= channel.language%>
                </div>
            </div> 
        </div>
        <div class="col-md-2"></div>
        
    </div>
</div>

<% include ../../partials/footer %>