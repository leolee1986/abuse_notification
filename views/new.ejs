<% include ../partials/header %>

<div class="contianer">
    <div class="row">
        
        <div class="col-md-4"></div>
        <div class="col-md-4">
            <h1>New Abuse Notification</h1>
            <form action="/notifications" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="notificationId" placeholder="Notification id">
                </div>
                <div class="form-group">
                    <input class="form-control" type="date" name="notificationDate">
                </div>
                <div class="form-group">
                    <input class="form-control" type="email" name="notificationRecipient">
                </div>
                <div>
                    <button class="btn btn-primary">Create</button>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>



